/**index.wxss**/

.container {
  padding: 5px;
  flex-direction:column;
  display: inline-block;

}

.headerContainer{
  background-color: 'red';
  padding: 0;
  font-size: 14.0px;
  flex-direction:row;
  display: inline-flex
}

.headerSubContainer{
  color: 'blue';
  width: 240px;
  padding-left: 5px;
  display: inline-flex;
  flex-direction:column;
  justify-content: center
}

.headerImage{
  width: 50px;
  height: 50px;
  margin: 0px;
  border-radius: 25px
}

 .contentText{
  color: '#222333';
  width:730rpx
} 

.subText{
  color: 'red'
}

.bgImage{
  width:730rpx
}

.seperateLine{
  padding: 0;
  margin: 0;
  width: 100%;
  height: 1px;
  background-color: '#333333'
}

.shareImg{
  width: 60px;
  height: 30px;
}

.btn{
  border: 1px solid whitesmoke; 
  border-radius: 5px;  
  height: 30px; 
  left: 15px;
  width: 50px;
  top: 10px;
  padding: 0px;
  font-size: 12px;
  justify-content: center;
  color: pink;
  background-color: white;
}

.btn::after{
  border: none; 
}