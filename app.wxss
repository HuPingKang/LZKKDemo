/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 

/**index.wxss**/

.container {
  padding: 5px;
  flex-direction:column;
  display: inline-block;

}

.headerContainer{
  /* background-color: red; */
  margin: 0;
  width: 730rpx;
  font-size: 14.0px;
  flex-direction:row;
  display: inline-flex
}

.headerSubContainer{
  color: rebeccapurple;
  width: 460rpx;
  padding-left: 5px;
  margin: 0px;
  display: inline-flex;
  font-size: 14px;
  flex-direction:column;
  justify-content: center
}

.headerImage{
  width: 50px;
  height: 50px;
  margin: 0px;
  border-radius: 25px;
  box-shadow: 1px 1px 2px gray;
}

 .contentText{
  color: #222333;
  width:730rpx;
  font-size: 16px;

} 

.subText{
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size: 12px;
  color: grey;
}

.bgImage{
  width:730rpx;
  border-radius: 2px;
}

.seperateLine{
  margin-top: 10px;
  width: 100%;
  height: 1px;
  background-color: #F2F2F2
}

.shareImg{
  width: 60px;
  height: 30px;
}

.btn{
  border: 1px solid pink; 
  border-radius: 5px;  
  height: 30px; 
  /* left: 15px; */

  width: 50px;
  top: 10px;
  padding: 0px;
  margin-right: 0px;
  font-size: 12px;
  justify-content: center;
  color: pink;
  background-color: white;
}

.btn::after{
  border: none; 
}

.infoBtn{
  border: 1px solid pink; 
  border-radius: 5px;  
  height: 30px; 
  width: 50px;
  margin-right: 0px;
  padding: 0px;
  top: 10px;
  font-size: 12px;
  justify-content: center;
  color: pink;
  background-color: white;
}

.infoBtn::after{
  border: none; 
}

.jokeText{
  display: inline-block;
  font-size: 16px;
  color: #333333;
  margin: 0px;
  padding: 0px;

}

.headerContentText{
  font-size: 12px;
  color:grey;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  
}

.line{
  width: 730rpx;
  margin-top: 5px;
  height: 1px;
  background-color:#F2F2F2;

}

.mapView{
  display: inline-block;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin: 5px;
  
}

map{
  width: 730rpx;
  height: 160px;
  border-radius: 5px;
}
.mapSb{
  height: 10px;
}

.mapText{
  display: inline-block;
  width: 750rpx;
  color:#333333;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}